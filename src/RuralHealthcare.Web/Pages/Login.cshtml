@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Rural Healthcare Platform</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gradient-to-br from-blue-500 to-blue-700 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-lg shadow-2xl p-8">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">üè• Rural Healthcare</h1>
                <p class="text-gray-600">Sign in to your account</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                    <p class="text-red-700">@Model.ErrorMessage</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
                    <p class="text-green-700">@Model.SuccessMessage</p>
                </div>
            }

            <form method="post" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input asp-for="Input.Email" type="email" class="input" required autofocus placeholder="your.email@example.com" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                    <input asp-for="Input.Password" type="password" class="input" required placeholder="Enter your password" />
                </div>

                <div class="flex items-center justify-between">
                    <label class="flex items-center">
                        <input asp-for="Input.RememberMe" type="checkbox" class="mr-2" />
                        <span class="text-sm text-gray-600">Remember me</span>
                    </label>
                    <a href="/account/forgotpassword" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
                </div>

                <button type="submit" class="w-full btn btn-primary py-3">
                    Sign In
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-gray-600">
                <p>First time logging in? Use the credentials sent to your email.</p>
            </div>
        </div>

        <div class="text-center mt-6 text-white text-sm">
            <p>&copy; 2024 Rural Healthcare Platform - Serving South African Communities</p>
        </div>
    </div>
</body>
</html>
