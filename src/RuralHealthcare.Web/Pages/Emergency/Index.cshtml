@page
@model EmergencyIndexModel
@{
    ViewData["Title"] = "Active Emergencies";
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Active Emergency Calls</h1>
    <a href="/emergency/create" class="btn btn-danger">üöë New Emergency</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
        <p class="text-green-700">@TempData["SuccessMessage"]</p>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <p class="text-red-700">@TempData["ErrorMessage"]</p>
    </div>
}

<div class="grid grid-cols-1 gap-6">
    @foreach (var emergency in Model.EmergencyCalls)
    {
        <div class="card border-l-4 @GetStatusBorderClass(emergency.Status)">
            <div class="flex justify-between items-start mb-4">
                <div>
                    @if (emergency.Patient != null)
                    {
                        <h3 class="text-xl font-bold">@emergency.Patient.FirstName @emergency.Patient.LastName</h3>
                        <p class="text-gray-600">@emergency.Patient.PhoneNumber</p>
                    }
                    else
                    {
                        <h3 class="text-xl font-bold">@emergency.CallerName</h3>
                        <p class="text-gray-600">@emergency.CallerPhone</p>
                        <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Anonymous/Walk-in</span>
                    }
                </div>
                <span class="px-3 py-1 rounded-full text-sm font-semibold @GetStatusBadgeClass(emergency.Status)">
                    @emergency.Status.ToUpper()
                </span>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
                <div>
                    <p class="text-sm text-gray-600">Emergency Type</p>
                    <p class="font-semibold">
                        @(emergency.EmergencyType == "medical" ? "üöë Medical" : "üëÆ Security")
                    </p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Call Time</p>
                    <p class="font-semibold">@emergency.CallTime.ToString("HH:mm")</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Location</p>
                    <p class="font-semibold">
                        @if (emergency.Latitude.HasValue && emergency.Longitude.HasValue)
                        {
                            <span>üìç GPS Available</span>
                        }
                        else
                        {
                            <span class="text-gray-400">No GPS</span>
                        }
                    </p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Duration</p>
                    <p class="font-semibold">@GetDuration(emergency.CallTime)</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(emergency.Description))
            {
                <div class="bg-gray-50 p-3 rounded mb-4">
                    <p class="text-sm font-semibold text-gray-800 mb-1">Description:</p>
                    <p class="text-sm text-gray-700">@emergency.Description</p>
                </div>
            }

            <div class="bg-blue-50 p-3 rounded mb-4 border border-blue-200">
                <p class="text-sm font-semibold text-blue-900 mb-2">üìç Location Information</p>
                
                @if (!string.IsNullOrEmpty(emergency.LocationDescription))
                {
                    <p class="text-sm text-gray-700 mb-2">
                        <strong>Description:</strong> @emergency.LocationDescription
                    </p>
                }
                
                @if (emergency.Latitude.HasValue && emergency.Longitude.HasValue)
                {
                    var lat = emergency.Latitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture);
                    var lng = emergency.Longitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture);
                    <div class="flex flex-wrap items-center gap-2 text-sm mb-2">
                        <span class="text-gray-700">
                            <strong>GPS:</strong> @lat, @lng
                        </span>
                    </div>
                    <div class="flex flex-wrap gap-2">
                        <a href="https://www.google.com/maps?q=@lat,@lng" 
                           target="_blank" 
                           class="btn btn-primary text-xs py-1 px-3">
                            üó∫Ô∏è View on Map
                        </a>
                        <a href="https://www.google.com/maps/dir/?api=1&destination=@lat,@lng" 
                           target="_blank" 
                           class="btn bg-green-600 text-white hover:bg-green-700 text-xs py-1 px-3">
                            üß≠ Get Directions
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-sm text-orange-700">
                        ‚ö†Ô∏è GPS coordinates not available. 
                        @if (emergency.Patient != null && emergency.Patient.Latitude.HasValue && emergency.Patient.Longitude.HasValue)
                        {
                            var patLat = emergency.Patient.Latitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture);
                            var patLng = emergency.Patient.Longitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture);
                            <span>Using patient's registered address.</span>
                            <div class="flex flex-wrap gap-2 mt-2">
                                <a href="https://www.google.com/maps?q=@patLat,@patLng" 
                                   target="_blank" 
                                   class="btn btn-primary text-xs py-1 px-3">
                                    üó∫Ô∏è View Patient Address
                                </a>
                                <a href="https://www.google.com/maps/dir/?api=1&destination=@patLat,@patLng" 
                                   target="_blank" 
                                   class="btn bg-green-600 text-white hover:bg-green-700 text-xs py-1 px-3">
                                    üß≠ Get Directions
                                </a>
                            </div>
                        }
                        else
                        {
                            <span>Contact caller for location details.</span>
                        }
                    </p>
                }
            </div>

            <div class="flex gap-2 flex-wrap">
                @if (emergency.Status == "pending")
                {
                    <form method="post" asp-page-handler="Dispatch" asp-route-id="@emergency.Id" class="inline">
                        <button type="submit" class="btn btn-danger text-sm">üö® Dispatch Ambulance</button>
                    </form>
                }
                @if (emergency.Status == "dispatched")
                {
                    <form method="post" asp-page-handler="MarkArrived" asp-route-id="@emergency.Id" class="inline">
                        <button type="submit" class="btn bg-blue-600 text-white hover:bg-blue-700 text-sm">üìç Mark Arrived</button>
                    </form>
                    @if (emergency.DispatchedAt.HasValue)
                    {
                        <span class="text-xs text-gray-600 self-center">Dispatched @GetTimeAgo(emergency.DispatchedAt.Value)</span>
                    }
                }
                @if (emergency.Status == "arrived")
                {
                    <form method="post" asp-page-handler="Complete" asp-route-id="@emergency.Id" class="inline">
                        <button type="submit" class="btn bg-green-600 text-white hover:bg-green-700 text-sm">‚úÖ Complete</button>
                    </form>
                    @if (emergency.ArrivedAt.HasValue)
                    {
                        <span class="text-xs text-gray-600 self-center">Arrived @GetTimeAgo(emergency.ArrivedAt.Value)</span>
                    }
                }
                @if (emergency.PatientId.HasValue)
                {
                    <a href="/patients/details?id=@emergency.PatientId" class="btn bg-gray-200 hover:bg-gray-300 text-sm">View Patient</a>
                }
                else
                {
                    <a href="/patients/create" class="btn bg-blue-100 text-blue-800 hover:bg-blue-200 text-sm">Create Patient Record</a>
                }
            </div>
        </div>
    }
</div>

@if (!Model.EmergencyCalls.Any())
{
    <div class="card text-center py-12">
        <div class="text-6xl mb-4">‚úÖ</div>
        <h3 class="text-xl font-bold mb-2">No Active Emergencies</h3>
        <p class="text-gray-600">All emergency calls have been resolved</p>
    </div>
}

@functions {
    string GetStatusBorderClass(string status) => status switch
    {
        "pending" => "border-red-500",
        "dispatched" => "border-yellow-500",
        "arrived" => "border-blue-500",
        "completed" => "border-green-500",
        _ => "border-gray-300"
    };

    string GetStatusBadgeClass(string status) => status switch
    {
        "pending" => "bg-red-100 text-red-800",
        "dispatched" => "bg-yellow-100 text-yellow-800",
        "arrived" => "bg-blue-100 text-blue-800",
        "completed" => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    string GetDuration(DateTime callTime)
    {
        var duration = DateTime.UtcNow - callTime;
        if (duration.TotalMinutes < 60)
            return $"{(int)duration.TotalMinutes}min";
        return $"{(int)duration.TotalHours}h {duration.Minutes}min";
    }

    string GetTimeAgo(DateTime time)
    {
        var duration = DateTime.UtcNow - time;
        if (duration.TotalMinutes < 1)
            return "just now";
        if (duration.TotalMinutes < 60)
            return $"{(int)duration.TotalMinutes}min ago";
        if (duration.TotalHours < 24)
            return $"{(int)duration.TotalHours}h ago";
        return $"{(int)duration.TotalDays}d ago";
    }
}
