@page
@model CreateEmergencyModel
@{
    ViewData["Title"] = "Emergency Call";
}

<div class="max-w-2xl mx-auto">
    <div class="card bg-red-50 border-2 border-red-500 mb-6">
        <h1 class="text-3xl font-bold text-red-700 mb-2">üö® Emergency Call</h1>
        <p class="text-red-600">This will immediately dispatch emergency services</p>
    </div>

    <form method="post" class="card space-y-6" id="emergencyForm" asp-antiforgery="true">
        @if (!ModelState.IsValid)
        {
            <div class="bg-red-50 border-l-4 border-red-500 p-4">
                <h3 class="font-bold text-red-800 mb-2">Please fix the following errors:</h3>
                <ul class="list-disc list-inside text-red-700">
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        
        <!-- Caller Type Selection -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <label class="block text-sm font-medium mb-3">Caller Type *</label>
            <div class="flex gap-4">
                <label class="flex items-center cursor-pointer">
                    <input type="radio" asp-for="Input.IsRegisteredPatient" value="true" checked class="mr-2" onchange="toggleCallerType(true)" />
                    <span>Registered Patient</span>
                </label>
                <label class="flex items-center cursor-pointer">
                    <input type="radio" asp-for="Input.IsRegisteredPatient" value="false" class="mr-2" onchange="toggleCallerType(false)" />
                    <span>Anonymous/Walk-in</span>
                </label>
            </div>
        </div>

        <!-- Registered Patient Section -->
        <div id="registeredSection">
            <label class="block text-sm font-medium mb-2">Select Patient *</label>
            <select asp-for="Input.PatientId" class="input" id="patientSelect">
                <option value="">Select Patient</option>
                @foreach (var patient in Model.Patients)
                {
                    <option value="@patient.Id">@patient.FirstName @patient.LastName - @patient.PhoneNumber</option>
                }
            </select>
        </div>

        <!-- Anonymous Caller Section -->
        <div id="anonymousSection" style="display: none;">
            <div class="space-y-4 bg-yellow-50 p-4 rounded-lg">
                <p class="text-sm text-yellow-800 mb-3">
                    <strong>Walk-in/Anonymous Emergency:</strong> Please provide basic information
                </p>
                <div>
                    <label class="block text-sm font-medium mb-2">Caller Name *</label>
                    <input asp-for="Input.CallerName" class="input" placeholder="Full name" id="callerName" />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Phone Number *</label>
                    <input asp-for="Input.CallerPhone" type="tel" class="input" placeholder="+27..." id="callerPhone" />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">ID Number (Optional)</label>
                    <input asp-for="Input.CallerIdNumber" class="input" placeholder="South African ID" />
                    <p class="text-xs text-gray-600 mt-1">Can be used to create patient record later</p>
                </div>
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium mb-2">Emergency Type *</label>
            <div class="space-y-2">
                <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
                    <input type="radio" asp-for="Input.EmergencyType" value="medical" class="mr-3" checked />
                    <div>
                        <div class="font-semibold">üöë Medical Emergency</div>
                        <div class="text-sm text-gray-600">Ambulance required</div>
                    </div>
                </label>
                <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
                    <input type="radio" asp-for="Input.EmergencyType" value="security" class="mr-3" />
                    <div>
                        <div class="font-semibold">üëÆ Security Emergency</div>
                        <div class="text-sm text-gray-600">Police/Security required</div>
                    </div>
                </label>
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium mb-2">Description</label>
            <textarea asp-for="Input.Description" class="input" rows="4" placeholder="Describe the emergency situation..."></textarea>
        </div>

        <div>
            <label class="block text-sm font-medium mb-2">Location Description</label>
            <input asp-for="Input.LocationDescription" class="input" placeholder="e.g., Corner of Main St and 5th Ave, near the clinic" />
            <p class="text-xs text-gray-600 mt-1">Provide landmarks or address if GPS is not available</p>
        </div>

        <div class="bg-blue-50 p-4 rounded-lg">
            <h3 class="font-semibold mb-2">üìç GPS Location</h3>
            <p class="text-sm text-gray-600 mb-3">Click below to capture current GPS coordinates</p>
            <button type="button" onclick="getLocation()" class="btn btn-primary text-sm">Use Current Location</button>
            <input type="hidden" name="Input.Latitude" id="latitude" value="" />
            <input type="hidden" name="Input.Longitude" id="longitude" value="" />
            <p id="locationStatus" class="text-sm text-gray-600 mt-2"></p>
        </div>

        @if (Model.NearestAmbulanceClinic != null)
        {
            var c = Model.NearestAmbulanceClinic;
            var lat = c.Latitude;
            var lng = c.Longitude;
            <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded">
                <div class="font-semibold mb-1">Nearest Ambulance Facility</div>
                <div class="text-sm text-gray-700">@c.Name ‚Äî @Model.NearestAmbulanceDistanceLabel</div>
                <div class="mt-2 flex gap-2">
                    <a href="https://www.google.com/maps?q=@lat,@lng" target="_blank" class="btn btn-secondary text-xs">üó∫Ô∏è View on Map</a>
                    <a href="https://www.google.com/maps/dir/?api=1&destination=@lat,@lng" target="_blank" class="btn bg-green-600 text-white hover:bg-green-700 text-xs">üß≠ Get Directions</a>
                </div>
            </div>
        }

        <div id="externalFacilities" class="mt-4"></div>
        <div id="nearestPanel" class="mt-4"></div>

        <div class="flex gap-4">
            <button type="submit" class="btn btn-danger flex-1">üö® Dispatch Emergency Services</button>
            <a href="/emergency" class="btn bg-gray-200 hover:bg-gray-300">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
<script>
    const ambulanceClinics = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AmbulanceClinics.Select(c => new { name = c.Name, lat = c.Latitude, lng = c.Longitude })));
    function haversine(lat1, lon1, lat2, lon2) {
        const R = 6371;
        const dLat = (lat2 - lat1) * Math.PI / 180;
        const dLon = (lon2 - lon1) * Math.PI / 180;
        const a = Math.sin(dLat/2)**2 + Math.cos(lat1 * Math.PI/180) * Math.cos(lat2 * Math.PI/180) * Math.sin(dLon/2)**2;
        const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
        return R * c;
    }
    function classifyFacility(tags) {
        if (!tags) return 'Unknown';
        const opType = (tags["operator:type"] || '').toLowerCase();
        const ownership = (tags["ownership"] || '').toLowerCase();
        const hcPriv = (tags["healthcare:private"] || '').toLowerCase();
        const operator = (tags["operator"] || '').toLowerCase();
        if (opType === 'government' || opType === 'public' || ownership === 'public') return 'Public';
        if (opType === 'private' || ownership === 'private' || hcPriv === 'yes') return 'Private';
        const privateOps = ['mediclinic','netcare','life healthcare','busamed','intercare','lenmed'];
        if (privateOps.some(p => operator.includes(p))) return 'Private';
        const publicOps = ['department of health','health department','provincial department','district health'];
        if (publicOps.some(p => operator.includes(p))) return 'Public';
        return 'Unknown';
    }
    async function fetchExternalFacilities(lat, lng) {
        const panel = document.getElementById('externalFacilities');
        if (!panel) return;
        panel.innerHTML = '<div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded"><div class="text-sm text-gray-700">Finding nearby public facilities‚Ä¶</div></div>';
        const query = `[out:json];(node(around:7000,${lat},${lng})["amenity"~"hospital|clinic"];way(around:7000,${lat},${lng})["amenity"~"hospital|clinic"];);out center 10;`;
        async function callOverpass(url) {
            const res = await fetch(url, { method: 'POST', body: query, headers: { 'Content-Type': 'text/plain' } });
            if (!res.ok) throw new Error('Overpass error');
            return res.json();
        }
        try {
            let data;
            try {
                data = await callOverpass('https://overpass-api.de/api/interpreter');
            } catch {
                data = await callOverpass('https://overpass.kumi.systems/api/interpreter');
            }
            const elements = (data.elements || []).map(e => {
                const name = e.tags && (e.tags.name || e.tags["name:en"] || e.tags.amenity) || 'Unknown facility';
                const pLat = e.lat || (e.center && e.center.lat);
                const pLng = e.lon || (e.center && e.center.lon);
                const dist = (pLat && pLng) ? haversine(lat, lng, pLat, pLng) : 9999;
                const kind = classifyFacility(e.tags);
                return { name, lat: pLat, lng: pLng, dist, kind };
            }).filter(x => x.lat && x.lng).sort((a,b) => a.dist - b.dist).slice(0,5);
            if (!elements.length) {
                panel.innerHTML = '<div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded"><div class="text-sm text-gray-700">No nearby public facilities found within 7 km.</div></div>';
                return;
            }
            const items = elements.map(x => {
                const mapsQ = `https://www.google.com/maps?q=${x.lat},${x.lng}`;
                const mapsDir = `https://www.google.com/maps/dir/?api=1&destination=${x.lat},${x.lng}`;
                return `<li class="py-2 flex items-center justify-between"><div><div class="font-semibold">${x.name}</div><div class="text-sm text-gray-600">${x.dist.toFixed(1)} km away ‚Ä¢ ${x.kind}</div></div><div class="flex gap-2"><a href="${mapsQ}" target="_blank" class="btn btn-secondary text-xs">üó∫Ô∏è Map</a><a href="${mapsDir}" target="_blank" class="btn bg-blue-600 text-white hover:bg-blue-700 text-xs">üß≠ Directions</a></div></li>`;
            }).join('');
            panel.innerHTML = `<div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded"><div class="font-semibold mb-2">Nearby Public Facilities</div><ul class="divide-y">${items}</ul><div class="text-xs text-gray-600 mt-3">Source: OpenStreetMap. Data may be incomplete. <a class="underline" href="mailto:support@ruralhealthcare.org.za?subject=Facility%20Correction">Report a correction</a></div></div>`;
        } catch (_) {
            panel.innerHTML = '<div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded"><div class="text-sm text-gray-700">Unable to load public facilities at the moment. Please try again.</div></div>';
        }
    }
    function toggleCallerType(isRegistered) {
        const registeredSection = document.getElementById('registeredSection');
        const anonymousSection = document.getElementById('anonymousSection');
        const patientSelect = document.getElementById('patientSelect');
        const callerName = document.getElementById('callerName');
        const callerPhone = document.getElementById('callerPhone');
        
        if (isRegistered) {
            registeredSection.style.display = 'block';
            anonymousSection.style.display = 'none';
            patientSelect.required = true;
            if (callerName) callerName.required = false;
            if (callerPhone) callerPhone.required = false;
        } else {
            registeredSection.style.display = 'none';
            anonymousSection.style.display = 'block';
            patientSelect.required = false;
            patientSelect.value = '';
            if (callerName) callerName.required = true;
            if (callerPhone) callerPhone.required = true;
        }
    }
    
    function getLocation() {
        const status = document.getElementById('locationStatus');
        
        if (navigator.geolocation) {
            status.textContent = 'Getting location...';
            navigator.geolocation.getCurrentPosition(
                (position) => {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    document.getElementById('latitude').value = lat.toString();
                    document.getElementById('longitude').value = lng.toString();
                    status.textContent = `‚úì Location captured: ${lat.toFixed(6)}, ${lng.toFixed(6)}`;
                    status.classList.add('text-green-600');
                    if (ambulanceClinics && ambulanceClinics.length) {
                        let best = null;
                        for (const c of ambulanceClinics) {
                            const d = haversine(lat, lng, c.lat, c.lng);
                            if (!best || d < best.d) best = { c, d };
                        }
                        if (best) {
                            const panel = document.getElementById('nearestPanel');
                            if (panel) {
                                const dLabel = `${best.d.toFixed(1)} km`;
                                const mapsQ = `https://www.google.com/maps?q=${best.c.lat},${best.c.lng}`;
                                const mapsDir = `https://www.google.com/maps/dir/?api=1&destination=${best.c.lat},${best.c.lng}`;
                                panel.innerHTML = `
                                    <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded">
                                        <div class="font-semibold mb-1">Nearest Ambulance Facility</div>
                                        <div class="text-sm text-gray-700">${best.c.name} ‚Äî ${dLabel}</div>
                                        <div class="mt-2 flex gap-2">
                                            <a href="${mapsQ}" target="_blank" class="btn btn-secondary text-xs">üó∫Ô∏è View on Map</a>
                                            <a href="${mapsDir}" target="_blank" class="btn bg-green-600 text-white hover:bg-green-700 text-xs">üß≠ Get Directions</a>
                                        </div>
                                    </div>`;
                            }
                        }
                    }
                    fetchExternalFacilities(lat, lng);
                },
                (error) => {
                    status.textContent = '‚úó Could not get location. Please provide location description.';
                    status.classList.add('text-red-600');
                }
            );
        } else {
            status.textContent = '‚úó Geolocation not supported';
            status.classList.add('text-red-600');
        }
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        const isRegistered = document.querySelector('input[name="Input.IsRegisteredPatient"]:checked').value === 'true';
        toggleCallerType(isRegistered);
        const params = new URLSearchParams(window.location.search);
        const qlat = params.get('lat');
        const qlng = params.get('lng');
        if (qlat && qlng) {
            document.getElementById('latitude').value = qlat;
            document.getElementById('longitude').value = qlng;
            const latNum = parseFloat(qlat);
            const lngNum = parseFloat(qlng);
            if (!Number.isNaN(latNum) && !Number.isNaN(lngNum)) {
                fetchExternalFacilities(latNum, lngNum);
            }
        }
    });
</script>
}
