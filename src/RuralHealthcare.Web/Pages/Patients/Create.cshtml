@page
@model CreatePatientModel
@{
    ViewData["Title"] = "Add New Patient";
}

<div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Add New Patient</h1>

    <form method="post" class="card space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium mb-2">First Name *</label>
                <input asp-for="Input.FirstName" class="input" required />
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">Last Name *</label>
                <input asp-for="Input.LastName" class="input" required />
            </div>
        </div>

        @{ var userRole = HttpContext.Session.GetString("UserRole"); }
        @if (userRole == "system_admin")
        {
            <div>
                <label class="block text-sm font-medium mb-2">Clinic</label>
                <select asp-for="Input.ClinicId" class="input">
                    <option value="">Select clinic</option>
                    @foreach (var c in Model.Clinics)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
            </div>
        }

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium mb-2">ID Number *</label>
                <input asp-for="Input.IdNumber" class="input" required />
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">Date of Birth *</label>
                <input asp-for="Input.DateOfBirth" type="date" class="input" required />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium mb-2">Phone Number *</label>
                <input asp-for="Input.PhoneNumber" type="tel" class="input" required />
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">Alternative Phone</label>
                <input asp-for="Input.AlternativePhoneNumber" type="tel" class="input" />
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium mb-2">Preferred Language *</label>
            <select asp-for="Input.PreferredLanguage" class="input">
                <option value="en">English</option>
                <option value="zu">isiZulu</option>
                <option value="xh">isiXhosa</option>
                <option value="st">Sesotho</option>
                <option value="tn">Setswana</option>
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium mb-2">Home Address</label>
            <textarea asp-for="Input.HomeAddress" class="input" rows="3"></textarea>
        </div>

        <div class="border-t pt-6">
            <h3 class="text-lg font-semibold mb-4">Medical Information</h3>
            
            <div class="mb-4">
                <label class="block text-sm font-medium mb-2">Chronic Conditions</label>
                <input asp-for="Input.ChronicConditionsText" class="input" placeholder="e.g., Diabetes, Hypertension (comma separated)" />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-2">Allergies</label>
                <input asp-for="Input.AllergiesText" class="input" placeholder="e.g., Penicillin, Peanuts (comma separated)" />
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Blood Type</label>
                <select asp-for="Input.BloodType" class="input">
                    <option value="">Unknown</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
            </div>
        </div>

        <div class="border-t pt-6">
            <h3 class="text-lg font-semibold mb-4">Emergency Contact</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium mb-2">Contact Name</label>
                    <input asp-for="Input.EmergencyContactName" class="input" />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2">Contact Phone</label>
                    <input asp-for="Input.EmergencyContactPhone" type="tel" class="input" />
                </div>
            </div>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="btn btn-primary">Save Patient</button>
            <a href="/patients" class="btn bg-gray-200 hover:bg-gray-300">Cancel</a>
        </div>
    </form>
</div>
