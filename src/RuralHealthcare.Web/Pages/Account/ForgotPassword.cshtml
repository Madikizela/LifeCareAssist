@page
@model RuralHealthcare.Web.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6">Forgot Password</h1>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="p-3 bg-green-50 border-l-4 border-green-500 rounded mb-4">@Model.SuccessMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-3 bg-red-50 border-l-4 border-red-500 rounded mb-4">@Model.ErrorMessage</div>
    }

    <form method="post" class="card space-y-4">
        <div>
            <label class="label">Email Address</label>
            <input asp-for="Input.Email" type="email" class="input" required />
        </div>
        <div class="flex gap-3">
            <button type="submit" class="btn btn-primary">Send Reset Link</button>
            <a href="/" class="btn bg-gray-200 hover:bg-gray-300">Back</a>
        </div>
    </form>
</div>
