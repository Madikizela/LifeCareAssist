@page
@model RuralHealthcare.Web.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6">Reset Password</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-3 bg-red-50 border-l-4 border-red-500 rounded mb-4">@Model.ErrorMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="p-3 bg-green-50 border-l-4 border-green-500 rounded mb-4">@Model.SuccessMessage</div>
    }

    @if (string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <form method="post" class="card space-y-4">
            <input type="hidden" asp-for="Input.Token" />
            <div>
                <label class="label">New Password</label>
                <input asp-for="Input.NewPassword" type="password" class="input" required />
            </div>
            <div>
                <label class="label">Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="input" required />
            </div>
            <div class="flex gap-3">
                <button type="submit" class="btn btn-primary">Update Password</button>
                <a href="/" class="btn bg-gray-200 hover:bg-gray-300">Cancel</a>
            </div>
        </form>
    }
</div>

