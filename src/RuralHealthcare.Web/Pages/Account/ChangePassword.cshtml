@page
@model RuralHealthcare.Web.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6">Change Password</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="p-3 bg-green-50 border-l-4 border-green-500 rounded mb-4">@TempData["SuccessMessage"]</div>
    }

    <form method="post" class="card space-y-4">
        <div>
            <label class="label">Current Password</label>
            <input asp-for="Input.CurrentPassword" type="password" class="input" required />
        </div>
        <div>
            <label class="label">New Password</label>
            <input asp-for="Input.NewPassword" type="password" class="input" required />
        </div>
        <div>
            <label class="label">Confirm New Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="input" required />
        </div>
        <div class="flex gap-3">
            <button type="submit" class="btn btn-primary">Update Password</button>
            <a href="/" class="btn bg-gray-200 hover:bg-gray-300">Cancel</a>
        </div>
    </form>
</div>

