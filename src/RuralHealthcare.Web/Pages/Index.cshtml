@page
@model IndexModel
@{
    ViewData["Title"] = "Rural Healthcare Platform";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rural Healthcare Platform - South Africa</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-blue-600 to-blue-800 text-white">
        <nav class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <span class="text-3xl">üè•</span>
                <span class="text-xl font-bold">Rural Healthcare</span>
            </div>
            <a href="#login" class="btn bg-white text-blue-600 hover:bg-gray-100">Staff Login</a>
        </nav>

        <div class="max-w-7xl mx-auto px-4 py-16 md:py-24">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div>
                    <h1 class="text-4xl md:text-5xl font-bold mb-6">
                        Healthcare for Rural South Africa
                    </h1>
                    <p class="text-xl mb-8 text-blue-100">
                        Connecting patients, clinics, and health workers through technology. 
                        Medication reminders, emergency services, and community care.
                    </p>
                    
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="#emergency" class="btn btn-danger text-lg px-8 py-4 text-center">
                            üöë Emergency Call
                        </a>
                        <a href="#about" class="btn bg-white text-blue-600 hover:bg-gray-100 text-lg px-8 py-4 text-center">
                            Learn More
                        </a>
                    </div>

                    <div class="mt-12 grid grid-cols-2 gap-6">
                        <div class="bg-blue-700 bg-opacity-50 rounded-lg p-4">
                            <div class="text-3xl font-bold">@Model.TotalPatients+</div>
                            <div class="text-blue-200">Patients Served</div>
                        </div>
                        <div class="bg-blue-700 bg-opacity-50 rounded-lg p-4">
                            <div class="text-3xl font-bold">@Model.ActiveClinics+</div>
                            <div class="text-blue-200">Active Clinics</div>
                        </div>
                    </div>
                </div>

                <!-- Login Form -->
                <div id="login" class="bg-white rounded-lg shadow-2xl p-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Staff Login</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                            <p class="text-red-700">@Model.ErrorMessage</p>
                        </div>
                    }

                    <form method="post" class="space-y-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                            <input asp-for="Input.Email" type="email" class="input" required placeholder="your.email@example.com" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                            <input asp-for="Input.Password" type="password" class="input" required placeholder="Enter your password" />
                        </div>

                        <button type="submit" class="w-full btn btn-primary py-3">
                            Sign In
                        </button>
                        <a href="/account/forgotpassword" class="w-full btn bg-gray-200 hover:bg-gray-300 py-3 text-center">Forgot Password</a>
                    </form>

                    <div class="mt-6 text-center text-sm text-gray-600">
                        <p>First time? Check your email for login credentials. <a href="/account/forgotpassword" class="text-blue-600 hover:underline">Forgot password?</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div id="about" class="max-w-7xl mx-auto px-4 py-16">
        <div class="text-center mb-12">
