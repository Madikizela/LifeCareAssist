@page
@model UsersIndexModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">System Users</h1>
    <a href="/admin/users/create" class="btn btn-primary">+ Add New User</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
        <p class="text-green-700">@TempData["SuccessMessage"]</p>
    </div>
}

<div class="card mb-6">
    <div class="flex gap-4">
        <input type="text" placeholder="Search users..." class="input flex-1" />
        <select class="input w-48">
            <option value="">All Roles</option>
            <option value="system_admin">System Admin</option>
            <option value="clinic_admin">Clinic Admin</option>
            <option value="health_worker">Health Worker</option>
            <option value="caregiver">Caregiver</option>
        </select>
        <button class="btn btn-primary">Search</button>
    </div>
</div>

<div class="card">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-4 py-3 text-left">Name</th>
                    <th class="px-4 py-3 text-left">Email</th>
                    <th class="px-4 py-3 text-left">Role</th>
                    <th class="px-4 py-3 text-left">Clinic</th>
                    <th class="px-4 py-3 text-left">Status</th>
                    <th class="px-4 py-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                @foreach (var user in Model.Users)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">@user.FirstName @user.LastName</td>
                        <td class="px-4 py-3">@user.Email</td>
                        <td class="px-4 py-3">
                            <span class="px-2 py-1 rounded text-xs @GetRoleBadgeClass(user.Role)">
                                @FormatRole(user.Role)
                            </span>
                        </td>
                        <td class="px-4 py-3">
                            @if (user.ClinicId.HasValue)
                            {
                                <span class="text-sm">Assigned</span>
                            }
                            else
                            {
                                <span class="text-gray-400">-</span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            @if (user.IsActive)
                            {
                                <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs">Active</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded text-xs">Inactive</span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            <div class="flex gap-2">
                                <a href="/admin/users/edit?id=@user.Id" class="text-blue-600 hover:underline text-sm">Edit</a>
                                @if (user.IsActive)
                                {
                                    <button class="text-red-600 hover:underline text-sm">Deactivate</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role) => role switch
    {
        "system_admin" => "bg-red-100 text-red-800",
        "clinic_admin" => "bg-purple-100 text-purple-800",
        "health_worker" => "bg-blue-100 text-blue-800",
        "caregiver" => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    string FormatRole(string role) => role switch
    {
        "system_admin" => "System Admin",
        "clinic_admin" => "Clinic Admin",
        "health_worker" => "Health Worker",
        "caregiver" => "Caregiver",
        _ => role
    };
}
