<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-8">
    <div class="card">
        <h2 class="text-xl font-bold mb-4">Appointments (7 days)</h2>
        <div class="relative h-64">
            <canvas id="appointmentsChart"></canvas>
        </div>
    </div>
    <div class="card">
        <h2 class="text-xl font-bold mb-4">Emergency Calls (7 days)</h2>
        <div class="relative h-64">
            <canvas id="emergenciesChart"></canvas>
        </div>
    </div>
    <div class="card">
        <h2 class="text-xl font-bold mb-4">Medication Adherence (7 days)</h2>
        <div class="relative h-64">
            <canvas id="adherenceChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartLabels7));
    const appointments = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Appointments7));
    const emergencies = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Emergencies7));
    const adherence = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Adherence7));

    const commonOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: { display: false },
            tooltip: { enabled: true }
        },
        scales: {
            x: { ticks: { autoSkip: true, maxRotation: 0, maxTicksLimit: 7 } },
            y: { beginAtZero: true }
        }
    };

    new Chart(document.getElementById('appointmentsChart'), {
        type: 'bar',
        data: {
            labels,
            datasets: [{
                label: 'Appointments',
                data: appointments,
                backgroundColor: 'rgba(59, 130, 246, 0.5)',
                borderColor: '#3b82f6',
                borderWidth: 1
            }]
        },
        options: {
            ...commonOptions,
            scales: { x: { ticks: { autoSkip: true, maxRotation: 0 } }, y: { beginAtZero: true } }
        }
    });

    new Chart(document.getElementById('emergenciesChart'), {
        type: 'bar',
        data: {
            labels,
            datasets: [{
                label: 'Emergencies',
                data: emergencies,
                backgroundColor: 'rgba(239, 68, 68, 0.5)',
                borderColor: '#ef4444',
                borderWidth: 1
            }]
        },
        options: {
            ...commonOptions,
            scales: { x: { ticks: { autoSkip: true, maxRotation: 0 } }, y: { beginAtZero: true } }
        }
    });

    new Chart(document.getElementById('adherenceChart'), {
        type: 'line',
        data: {
            labels,
            datasets: [{
                label: 'Adherence %',
                data: adherence,
                borderColor: '#22c55e',
                backgroundColor: 'rgba(34, 197, 94, 0.2)',
                tension: 0.3,
                fill: true,
                pointRadius: 3
            }]
        },
        options: {
            ...commonOptions,
            scales: { x: { ticks: { autoSkip: true, maxRotation: 0 } }, y: { beginAtZero: true, max: 100 } }
        }
    });
</script>
